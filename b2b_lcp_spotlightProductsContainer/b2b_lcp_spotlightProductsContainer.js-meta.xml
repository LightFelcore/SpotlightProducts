<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>54.0</apiVersion>
    <description>B2B Lcp Spotlight Products Container</description>
    <isExposed>true</isExposed>
    <masterLabel>B2B Lcp Spotlight Products Container</masterLabel>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
        <target>lightning__HomePage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__HomePage, lightningCommunity__Default">
            <property name="effectiveAccountId" type="String" label="Effective Account Id" default="{!CurrentUser.effectiveAccountId}"/>
            <property name="imagesPerSlide" type="String" label="Images Per Slide" datasource="1,2,3,4,5" default="1"/>
            <property name="statusHeaderTitleSection" label="Status Header Title Section" type="Boolean" default="true"/>
            <property name="statusHeaderArrowsSection" label="Status Header Arrows Section" type="Boolean" default="true"/>
            <property name="statusSideArrowsSection" label="Status Side Arrows Section" type="Boolean" default="false"/>
            <property name="statusInformationSection" label="Status Information Section" type="Boolean" default="true"/>
            <property name="statusDotsSection" label="Status Dots Section" type="Boolean" default="true"/>
            <property name="autoplay" label="Autoplay" type="Boolean" default="true"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>


